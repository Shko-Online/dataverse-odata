{
  "name": "@albanian-xrm/dataverse-odata",
  "version": "0.1.0",
  "description": "This package will help parse OData strings (only the Microsoft Dataverse subset). It can be used as a validator, or you can build some javascript library which consumes the output of this library.",
  "main": "./dist/index.js",
  "scripts": {
    "copy-files": "copyfiles -u 1 src/**/*.d.ts dist/",
    "build": "tsc --project tsconfig.build.json && npm run copy-files",
    "test": "jest --coverage --maxWorkers=4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albanian-xrm/dataverse-odata.git"
  },
  "keywords": [
    "odata;dataverse;made-in-albania"
  ],
  "author": "AlbanianXrm;Betim Beja",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albanian-xrm/dataverse-odata/issues"
  },
  "homepage": "https://github.com/albanian-xrm/dataverse-odata#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.25.0",
    "jest": "^29.2.1",
    "jest-environment-jsdom": "^29.2.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
