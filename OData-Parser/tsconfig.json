{
    "compilerOptions": {
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "module": "ES6",
        "moduleResolution": "node",
        "noEmit": false,
        "outDir": "lib",
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,       
        "baseUrl": ".",       
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "wwwroot",
        "lib"
    ],
    "include": [
        "src",
        "tests",
        "__type-tests__",
        "__test-components__"
    ]
}